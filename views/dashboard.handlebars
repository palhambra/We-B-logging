<form style="margin-bottom: 50px;" action="/api/blogs" method="POST">
  <label>Title:</label>
  <input style="width:100%;" type="text" name="title" id="title" required>

  <label>Content:</label>
  <textarea class="form-input" rows="4" style="width:100%" name="content" id="content" required></textarea>
  <button style="margin:15px; float:right;" type="submit">Post New Blog</button>
</form>



{{#if blogs.length}}
<div class="blog-list">
  <h3 class="text-center">Your Blogs:</h3>
  {{!-- {{#each blogs as |blog| }}

  <div class="row align-center mb-5 ">
    <div class="col-md-8 blog-card">
