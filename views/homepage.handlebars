{{#each blogs as |blog| }}
<div class="blog-card col-sm-8 mx-auto p-0">
<div class="card text-center">
  <div class="header card-header" style="background-color: #04374d; color: #fdf6f4;">
    By: {{username}} on {{format_date date_created}}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{content}}</p>
    <a href="/blog/{{id}}" class="btn btn-primary">See blog post</a>
  </div>

</div>
</div>
{{/each}}